{
  "label": "计算计划单品库存",
  "version": "1.0.0",
  "description": "计算单品库存",
  "nodes": [
    {
      "name": "查询单品库存",
      "engine": "xiang",
      "query": {
        "debug": true,
        "select": [":COUNT(id) as stock", "sku_id", "sku_sn"],
        "from": "$record",
        "wheres": [
          { ":plan_id": "计划ID", "=": "?:$in.0" },
          { ":sku_id": "单品ID", "=": "?:$in.1" },
          { ":status": "状态", "in": ["生效", "归档"] },
          { ":type": "类型", "=": "入库" }
        ],
        "first": 1
      }
    }
  ],
  "output": "{{$res.查询单品库存.stock}}"
}

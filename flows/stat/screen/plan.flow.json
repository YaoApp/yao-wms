{
  "label": "采购计划大屏呈现",
  "version": "1.0.0",
  "description": "采购计划大屏呈现",
  "nodes": [
    {
      "name": "日期",
      "process": "scripts.time.RangeYesterday",
      "args": ["{{$in.0}}"]
    },
    {
      "name": "统计",
      "engine": "xiang",
      "query": {
        "debug": false,
        "select": [":COUNT(id) as 数量", "status as name"],
        "wheres": [
          { ":end": "结束时间", ">=": "?:$res.日期.from" },
          { ":end": "结束时间", "<=": "?:$res.日期.to" },
          { ":status": "状态", "in": ["进行中", "已完成"] }
        ],
        "from": "plan",
        "groups": "status"
      }
    }
  ],
  "output": "{{$res.统计}}"
}

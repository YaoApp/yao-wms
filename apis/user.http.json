{
  "name": "用户接口",
  "version": "1.0.0",
  "description": "用户接口",
  "group": "user",
  "paths": [
    {
      "path": "/photo",
      "guard": "-",
      "method": "GET",
      "process": "flows.user.photo",
      "in": ["$query.file"],
      "out": { "status": 200, "type": "image/png" }
    },
    {
      "path": "/token/refresh",
      "guard": "bearer-jwt",
      "method": "POST",
      "process": "scripts.guard.TokenRefresh",
      "in": [],
      "out": { "status": 200, "type": "application/json" }
    },
    {
      "path": "/find/:id",
      "guard": "scripts.guard.Node",
      "method": "POST",
      "process": "scripts.user.Find",
      "in": ["$param.id", ":payload"],
      "out": { "status": 200, "type": "application/json" }
    },
    {
      "path": "/update/:id",
      "guard": "scripts.guard.Node",
      "method": "POST",
      "process": "scripts.user.Update",
      "in": ["$param.id", ":payload"],
      "out": { "status": 200 }
    },
    {
      "path": "/select",
      "method": "GET",
      "process": "flows.user.select",
      "in": [],
      "out": { "status": 200, "type": "application/json" }
    }
  ]
}
